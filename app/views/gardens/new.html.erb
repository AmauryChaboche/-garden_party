<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4">
      <p><%= simple_form_for(@garden) do |f| %>
        <% if @garden.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @garden.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :title, label: 'title' %>
        <%= f.input :address, label: 'address' %>
        <%= f.input :description, label: 'description' %>
        <%= f.input :surface, label: 'surface' %>
        <%= f.input :price, label: 'price' %>
        <%= f.input :product, collection: ["tomatoes", "salads", "carrots", "beans"] %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit %>
      <% end %></p>
    </div>
  </div>
</div>
