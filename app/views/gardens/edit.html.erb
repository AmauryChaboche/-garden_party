<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4">
      <p><%= simple_form_for(@garden) do |f| %>
        <% if @garden.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @garden.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :title,default: @garden.title  , label: 'title' %>
        <%= f.input :address, default: @garden.address , label: 'address' %>
        <%= f.input :description, default: @garden.description , label: 'description' %>
        <%= f.input :surface, label: 'surface' , default: @garden.surface %>
        <%= f.input :price, label: 'price' , default: @garden.price %>
        <%= f.input :product, default: @garden.product ,  collection: ["tomates", "salades", "haricots", "choux", "radis", "courgettes"] %>
        <%= f.input :photo , default: @garden.photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit %>
      <% end %></p>
    </div>
  </div>
</div>
