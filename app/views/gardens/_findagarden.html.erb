<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 container form-container">
      <div class="row search-garden-row">
        <%= form_tag gardens_path, method: :get do %>
          <%= label_tag 'Where' %>
          <%= text_field_tag :city,
          params[:city],
          class: "form-control search-garden-form",
          placeholder: "Enter a city"
          %>
    </div>
          <br>
    <div class="row search-garden-row">
          <%= label_tag 'What' %>
          <%= select_tag :product, options_for_select(["tomatoes", "salads", "carrots", "beans"]),
          prompt: "Select a product",
          class: "form-control search-garden-form"
          %>
          <br>
           <div class="button text-center">
          <%= submit_tag "Search", class: "btn btn-large search-garden-btn" %>
          </div>
        <% end %>
      </div>
</div>
